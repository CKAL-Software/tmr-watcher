{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": "./"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
